                    <td><input data-evidCheck="spirit-box" id="evidSpiritNo" type="checkbox" class="checkEvid hasnt_evid"></td>
                </tr>
                <tr>
                    <td colspan="7">
                        <button id="btnClear">Clear All</button>
                    </td>
                </tr>
            </table>
            <div id="ghostInfo" class="col-2">
